<% if comments.any? %>
  <% comments.each do |comment| %>
    <div class="border rounded mb-2">
      <div class="comment fw-bold pt-3">
        <p><%= comment.title %></p>
      </div>
      <div class="comment">
        <p><%=safe_join(comment.content.split("\n"),tag(:br))%></p>
      </div>
      <div class="row commenter" style="padding-left: 15px;">
        <div class="col-6">
        <%= link_to comment.user.name, user_path(comment.user.id), class: "text-decoration-none" %>さん
        </div>
        <div class="col-6 d-flex justify-content-end" pr-3>
          <%= render "favorites/like_button", comment: comment %>
        </div>
      </div>
    </div>
  <% end %>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %> 


