<div class="container forms border rounded pb-5">
  <div class="text-center my-5">
    <h3><%= @item.name %></h3>
  </div>
  <div class="row-form">
    <div class="col-sm-8 offset-sm-2">
      <%= form_with(model: @comment, url: item_comments_path) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
    
      <div class="mb-4">
        <p><%= f.label :title, 'タイトル' %></p>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="mb-4">
        <p><%= f.label :content, 'コメント' %></p>
        <%= f.text_area :content, class: 'form-control', rows: 4 %>
      </div>
      <div class="d-flex justify-content-center py-2">
        <%= f.submit '投稿する', class: 'btn btn-success w-50' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

