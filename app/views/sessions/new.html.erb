<div class="container forms border rounded pb-5">
  <div class="text-center my-5 ">
    <h3>ログイン</h3>
  </div>

<div class="row-form">
  <div class="col-sm-8 offset-sm-2">

    <%= form_with(url: login_path, scope: :session) do |f| %>
    
      <div class="mb-4">
        <p><%= f.label :email, 'メールアドレス' %></p>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="mb-4">
        <p><%= f.label :password, 'パスワード' %></p>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="d-flex justify-content-center py-2">
        <%= f.submit 'ログイン', class: 'btn btn-success w-50' %>
      </div>
    <% end %>
    <div class="d-flex justify-content-center py-2">
      <p><%= link_to '会員登録はこちら', signup_path %></p>
    </div>
  </div>
</div>
</div>